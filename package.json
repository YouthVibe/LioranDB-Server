{
  "name": "liorandb-server",
  "type": "module",
  "version": "1.0.0",
  "description": "LioranDB is a lightweight, file-based database solution designed for simplicity and ease of use. It offers a command-line interface (CLI) for server management, user authentication, and CORS configuration, alongside a Node.js connector with a MongoDB-like API for seamless programmatic interaction.",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.cjs",
    "dev": "nodemon . --ignore frontend-nextjs",
    "build": "esbuild server.js --bundle --platform=node --outfile=dist/server.cjs"
  },
  "keywords": [
  ],
  "author": "Swaraj Puppalwar",
  "license": "MIT",
  "dependencies": {
    "@clerk/express": "^1.7.34",
    "@langchain/core": "^1.0.2",
    "@langchain/groq": "^1.0.0",
    "@langchain/langgraph": "^1.0.1",
    "cheerio": "^1.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "danfojs": "^1.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "google-auth-library": "^10.5.0",
    "langchain": "^1.0.2",
    "mongodb": "^6.20.0",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "numpy": "^0.0.1",
    "ollama": "^0.6.0",
